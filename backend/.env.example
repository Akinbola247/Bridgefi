# ============================================
# BridgeFi Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
# ============================================

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# Mantle Network Configuration
# ============================================
# Mantle Sepolia Testnet RPC URL
MANTLE_RPC_URL=https://rpc.sepolia.mantle.xyz

# USDC Token Address on Mantle Sepolia
# This is the ERC20 USDC token contract address
USDC_TOKEN_ADDRESS=0x0D2aFc5b522aFFdd2E55a541acEc556611A0196F

# ============================================
# Treasury Wallet Configuration
# ============================================
# ⚠️ CRITICAL: Use a SEPARATE wallet for treasury operations
# NEVER use user wallets as treasury wallet
# This wallet holds USDC for off-ramp transactions

# Treasury Wallet Private Key
# Generate a new wallet specifically for treasury operations
# Format: 0x followed by 64 hex characters
TREASURY_PRIVATE_KEY=your_treasury_wallet_private_key_here

# Treasury Wallet Address (optional, for reference)
# The address of the treasury wallet (derived from private key)
TREASURY_ADDRESS=your_treasury_wallet_address_here

# ============================================
# Paystack Configuration
# ============================================
# Get your API keys from: https://dashboard.paystack.com/#/settings/developer

# Paystack Secret Key (REQUIRED)
# Test keys: sk_test_... | Live keys: sk_live_...
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here

# Paystack Public Key (REQUIRED)
# Test keys: pk_test_... | Live keys: pk_live_...
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Paystack Base URL (optional, defaults to production)
PAYSTACK_BASE_URL=https://api.paystack.co

# ============================================
# Exchange Rate Configuration
# ============================================
# Exchange rate margin percentage (added to base rate for profit)
# Format: Decimal number (0.02 = 2%, 0.05 = 5%)
EXCHANGE_RATE_MARGIN=0.02

# Rate update interval in milliseconds
# How often to fetch new exchange rates from APIs
RATE_UPDATE_INTERVAL=30000

# ============================================
# Transaction Limits (Optional)
# ============================================
MIN_ONRAMP_AMOUNT_NGN=1000
MAX_ONRAMP_AMOUNT_NGN=5000000
MIN_OFFRAMP_AMOUNT_USDC=10
MAX_OFFRAMP_AMOUNT_USDC=10000

# ============================================
# Webhook Configuration
# ============================================
# Webhook secret for verifying Paystack webhooks
WEBHOOK_SECRET=your_webhook_secret_here
